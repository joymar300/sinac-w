<%- include('panelNavBar.ejs'); %>

<div class="p-3" style="width: 1600px; margin-left: 100px;">
    <h3>Docentes de la institución</h3>
  <div class="row justify-content-md-center">
    <table id="docentes" class="table">
      <thead>
        <tr>
          <th scope="col">Cedula</th>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>
          <th scope="col">Materia</th>
          <th scope="col">Grado</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach(function(docente) { %> 
        <tr>
          <th scope="row"><%= docente.usuCedula %></th>
          <td><%= docente.usuNombre %></td>
          <td><%= docente.usuApellidoP %></td>
          <td><%= docente.matNombre %></td>
          <td><%= docente.grados %></td>
        </tr>  
        <% }) %>
      </tbody>
    </table>

  </div>

</div>

</main>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>

<script src="../js/bootstrap.bundle.min.js"></script>

<script>
  $(document).ready(function () {
    $('#docentes').DataTable();
  });
</script>
<script>document.title = 'Docentes en la institución'</script>

<!-- <script src="../js/sidebars.js"></script> -->

</body>
</html>